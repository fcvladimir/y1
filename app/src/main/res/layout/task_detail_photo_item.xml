<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="@dimen/zero_angle_size" >

    <ImageView
        android:id="@+id/ivTaskPhoto"
        android:layout_width="@dimen/task_list_item_task_photo_size"
        android:layout_height="@dimen/task_list_item_task_photo_size"
        style="@style/ImageView.TaskPhoto"/>

</android.support.v7.widget.CardView>